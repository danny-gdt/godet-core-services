{
  "family": "godet-services",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::your-account:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::your-account:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "auth-service",
      "image": "your-account.dkr.ecr.region.amazonaws.com/auth-service:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "LOG_LEVEL",
          "value": "info"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:region:account:secret:auth-service/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:region:account:secret:auth-service/redis-url"
        },
        {
          "name": "ACCESS_TOKEN_SECRET",
          "valueFrom": "arn:aws:secretsmanager:region:account:secret:auth-service/access-token-secret"
        },
        {
          "name": "REFRESH_TOKEN_SECRET",
          "valueFrom": "arn:aws:secretsmanager:region:account:secret:auth-service/refresh-token-secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/auth-service",
          "awslogs-region": "region",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "essential": true
    },
    {
      "name": "elasticsearch",
      "image": "docker.elastic.co/elasticsearch/elasticsearch:8.14.0",
      "portMappings": [
        {
          "containerPort": 9200,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "discovery.type",
          "value": "single-node"
        },
        {
          "name": "xpack.security.enabled",
          "value": "false"
        },
        {
          "name": "ES_JAVA_OPTS",
          "value": "-Xms512m -Xmx512m"
        },
        {
          "name": "cluster.name",
          "value": "godet-cluster"
        },
        {
          "name": "node.name",
          "value": "godet-node-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/elasticsearch",
          "awslogs-region": "region",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:9200/_cluster/health || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      },
      "essential": true
    },
    {
      "name": "logstash",
      "image": "docker.elastic.co/logstash/logstash:8.14.0",
      "portMappings": [
        {
          "containerPort": 12201,
          "protocol": "udp"
        }
      ],
      "environment": [
        {
          "name": "ELASTICSEARCH_HOSTS",
          "value": "http://elasticsearch:9200"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/logstash",
          "awslogs-region": "region",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:9600 || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 60
      },
      "essential": true
    },
    {
      "name": "kibana",
      "image": "docker.elastic.co/kibana/kibana:8.14.0",
      "portMappings": [
        {
          "containerPort": 5601,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ELASTICSEARCH_HOSTS",
          "value": "http://elasticsearch:9200"
        },
        {
          "name": "SERVER_NAME",
          "value": "kibana-prod"
        },
        {
          "name": "SERVER_HOST",
          "value": "0.0.0.0"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/kibana",
          "awslogs-region": "region",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:5601/api/status || exit 1"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 120
      },
      "essential": true
    }
  ]
} 