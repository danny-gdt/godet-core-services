{
    "family": "godet-auth-service",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::ACCOUNT_ID:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "auth-service",
            "image": "IMAGE_URI_PLACEHOLDER",
            "portMappings": [
                {
                    "containerPort": 3000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "NODE_ENV",
                    "value": "production"
                },
                {
                    "name": "ACCESS_TOKEN_EXPIRATION",
                    "value": "15m"
                },
                {
                    "name": "REFRESH_TOKEN_EXPIRATION",
                    "value": "7d"
                },
                {
                    "name": "LOG_LEVEL",
                    "value": "info"
                }
            ],
            "secrets": [
                {
                    "name": "DATABASE_URL",
                    "valueFrom": "SECRET_ARN_PLACEHOLDER:database-url::"
                },
                {
                    "name": "REDIS_URL",
                    "valueFrom": "SECRET_ARN_PLACEHOLDER:DATABASE_URL::"
                },
                {
                    "name": "FRONTEND_URL",
                    "valueFrom": "SECRET_ARN_PLACEHOLDER:frontend-url::"
                },
                {
                    "name": "ACCESS_TOKEN_SECRET",
                    "valueFrom": "SECRET_ARN_PLACEHOLDER:access-token-secret::"
                },
                {
                    "name": "REFRESH_TOKEN_SECRET",
                    "valueFrom": "SECRET_ARN_PLACEHOLDER:refresh-token-secret::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/godet-auth-service",
                    "awslogs-region": "eu-west-3",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "essential": true
        }
    ]
}